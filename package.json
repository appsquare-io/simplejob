{
  "name": "simplejob",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "module": "./esm/index.js",
  "files": [
    "dist/**",
    "esm/**"
  ],
  "repository": "",
  "homepage": "https://simplejob.dev",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs",
    "build:cjs": "ncc build src/index.ts -o dist -m",
    "build:esm": "tsc --module ES6 --outDir esm",
    "watch": "tsc --watch",
    "types:check": "tsc --noEmit",
    "format": "prettier --write \"{src,test,examples}/**/*.{ts,tsx}\"",
    "lint": "eslint \"{src,test,examples}/**/*.{ts,}\"",
    "lint:fix": "eslint \"{src,test,examples}/**/*.{ts,}\" --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn types:check && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint:fix",
      "yarn format",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/node": "11.12.0",
    "@typescript-eslint/eslint-plugin": "2.5.0",
    "@typescript-eslint/parser": "2.5.0",
    "eslint": "6.6.0",
    "eslint-config-prettier": "6.5.0",
    "husky": "2.4.1",
    "lint-staged": "8.2.1",
    "prettier": "1.18.2",
    "typescript": "3.6.4"
  },
  "dependencies": {
    "@vercel/ncc": "^0.26.1"
  }
}
